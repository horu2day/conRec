{
  "name": "conrec-backend",
  "version": "1.0.0",
  "description": "회의실 음성 녹음 시스템 - 백엔드 서버",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec \"npx ts-node -r tsconfig-paths/register src/server.ts\"",
    "dev-simple": "npx ts-node -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/server.js",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "fix-indexes": "ts-node -r tsconfig-paths/register scripts/fix-mongodb-indexes.ts"
  },
  "keywords": [
    "meeting",
    "recording",
    "audio",
    "transcription",
    "websocket"
  ],
  "author": "conRec Team",
  "license": "MIT",
  "dependencies": {
    "@mongodb-js/zstd": "^2.0.1",
    "axios": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "form-data": "^4.0.0",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.9.0",
    "mongoose": "^8.7.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "socket.io": "^4.8.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.9.0",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "_moduleAliases": {
    "@": "./dist"
  }
}
